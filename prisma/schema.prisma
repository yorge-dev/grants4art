generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Grant {
  id             String             @id @default(cuid())
  title          String
  organization   String
  amount         String?
  amountMin      Int?
  amountMax      Int?
  deadline       DateTime?
  location       String
  eligibility    String
  description    String
  applicationUrl String?
  category       String?
  discoveredAt   DateTime           @default(now())
  approvedAt     DateTime?
  approvedBy     String?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  scrapeJobId    String?
  scrapeJob      ScrapeJob?         @relation(fields: [scrapeJobId], references: [id])
  tags           GrantTagRelation[]

  @@index([deadline])
  @@index([location])
  @@index([category])
}

model GrantTag {
  id        String             @id @default(cuid())
  name      String             @unique
  slug      String             @unique
  createdAt DateTime           @default(now())
  grants    GrantTagRelation[]
}

model GrantTagRelation {
  grantId String
  tagId   String
  grant   Grant    @relation(fields: [grantId], references: [id], onDelete: Cascade)
  tag     GrantTag @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([grantId, tagId])
  @@index([grantId])
  @@index([tagId])
}

model AdminUser {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String?
  role      AdminRole @default(ADMIN)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model GrantSource {
  id          String      @id @default(cuid())
  name        String
  url         String      @unique
  isActive    Boolean     @default(true)
  lastScraped DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  scrapeJobs  ScrapeJob[]
}

model ScrapeJob {
  id              String          @id @default(cuid())
  sourceUrl       String
  status          ScrapeJobStatus @default(PENDING)
  discoveredCount Int             @default(0)
  errorMessage    String?
  createdAt       DateTime        @default(now())
  completedAt     DateTime?
  grantSourceId   String?
  grants          Grant[]
  grantSource     GrantSource?    @relation(fields: [grantSourceId], references: [id])

  @@index([status])
  @@index([createdAt])
  @@index([grantSourceId])
}

enum AdminRole {
  ADMIN
  SUPER_ADMIN
}

enum ScrapeJobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}
